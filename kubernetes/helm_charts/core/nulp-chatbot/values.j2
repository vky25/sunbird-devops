### Default variable file for customreports-service ###

namespace: {{ namespace }}
imagepullsecrets: {{ imagepullsecrets }}
dockerhub: {{ dockerhub }}


env:
  javaoptions: {{nulpchatbot_java_mem_limit|default('-Xmx600m')}}

replicaCount: {{nulpchatbot_replicacount|default(1)}}
repository: {{ image_nulpchatbot_service }}
image_tag: {{ image_tag }}
resources:
  requests:
    cpu: {{nulpchatbot_cpu_req|default('100m')}}
    memory: {{nulpchatbot_mem_req|default('100Mi')}}
  limits:
    cpu: {{nulpchatbot_cpu_limit|default('1')}}
    memory: {{nulpchatbot_mem_limit|default('1024Mi')}}
network:
  port: {{ service_nulpchatbot_port }}
  targetport: {{ service_nulpchatbot_port }}
strategy:
  type: RollingUpdate
  maxsurge: {{ nulpchatbot_maxsurge|default('25%') }}
  maxunavailable: {{ nulpchatbot_maxunavailable|default('25%') }}

customreportsjson: |-
 {
    "service_nulpchatbot_port" : "{{ service_nulpchatbot_port }}",
    "nulpchatbot_service_ip" : "{{ nulpchatbot_service_ip }}",
    "KEYSPACE" : "{{ KEYSPACE }}",
    "TABLE" : "{{ TABLE }}",
    "USER_INFO_TABLE" : "{{ USER_INFO_TABLE }}"
    "USER_INFO_KEYSPACE" : "{{ USER_INFO_KEYSPACE }}",
    "COURSE_KEYSPACE" : "{{ COURSE_KEYSPACE}}",
    "COURSE_TABLE" : "{{ COURSE_TABLE }}"
 } 
